<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Krypton_Desktop.ViewModels"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="550"
        x:Class="Krypton_Desktop.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="Connect to Krypton Server"
        Width="450" Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,16,0,6"/>
        </Style>
        <Style Selector="TextBlock.label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style Selector="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Padding="24,20" Background="#252525">
            <StackPanel Orientation="Horizontal">
                <i:Icon Value="mdi-cloud-sync" FontSize="28" Foreground="#0078D4"/>
                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="Krypton Server"
                               Foreground="#FFFFFF"
                               FontSize="18"
                               FontWeight="Bold"/>
                    <TextBlock Text="Connect to sync clipboard across devices"
                               Foreground="#888888"
                               FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="24,0">
            <StackPanel>
                <!-- Step 1: Server Connection -->
                <StackPanel IsVisible="{Binding IsStep1}">
                    <TextBlock Classes="header" Text="Server Connection"/>

                    <TextBlock Classes="label" Text="Server Address"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0"
                                 Text="{Binding ServerAddress}"
                                 Watermark="e.g., krypton.example.com"/>
                        <TextBox Grid.Column="1"
                                 Text="{Binding ServerPort}"
                                 Width="80"
                                 Margin="8,0,0,0"
                                 Watermark="Port"/>
                    </Grid>

                    <Button Command="{Binding ConnectCommand}"
                            Classes="primary"
                            Margin="0,16,0,0"
                            HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <i:Icon Value="mdi-connection" FontSize="16" Margin="0,0,8,0"
                                    IsVisible="{Binding !IsConnecting}"/>
                            <i:Icon Value="mdi-loading" FontSize="16" Margin="0,0,8,0"
                                    IsVisible="{Binding IsConnecting}"/>
                            <TextBlock Text="{Binding ConnectButtonText}"/>
                        </StackPanel>
                    </Button>

                    <!-- Error message for step 1 -->
                    <Border Background="#3A1B1B"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,16,0,0"
                            IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <StackPanel Orientation="Horizontal">
                            <i:Icon Value="mdi-alert-circle" FontSize="16" Foreground="#F44336"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#F44336"
                                       Margin="8,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Step 2: Authentication -->
                <StackPanel IsVisible="{Binding IsStep2}">
                    <!-- Connected indicator with server info -->
                    <Border Background="#1B3A1B"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,16,0,0">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <i:Icon Value="mdi-check-circle" FontSize="16" Foreground="#4CAF50"/>
                                <TextBlock Text="{Binding ServerAddress, StringFormat='Connected to {0}'}"
                                           Foreground="#4CAF50"
                                           Margin="8,0,0,0"/>
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Command="{Binding BackCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Padding="4"
                                    ToolTip.Tip="Disconnect">
                                <i:Icon Value="mdi-close" FontSize="14" Foreground="#888888"/>
                            </Button>
                        </Grid>
                    </Border>

                    <TextBlock Classes="header" Text="Authentication" Margin="0,24,0,6"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <RadioButton Content="Username &amp; Password"
                                     IsChecked="{Binding !UseApiKey}"
                                     GroupName="AuthMethod"/>
                        <RadioButton Content="API Key"
                                     IsChecked="{Binding UseApiKey}"
                                     GroupName="AuthMethod"
                                     Margin="16,0,0,0"/>
                    </StackPanel>

                    <!-- Username/Password fields -->
                    <StackPanel IsVisible="{Binding ShowUsernamePassword}">
                        <TextBlock Classes="label" Text="Username"/>
                        <TextBox Text="{Binding Username}"
                                 Watermark="Enter username"/>

                        <TextBlock Classes="label" Text="Password" Margin="0,12,0,4"/>
                        <TextBox Text="{Binding Password}"
                                 PasswordChar="*"
                                 Watermark="Enter password"/>
                    </StackPanel>

                    <!-- API Key field -->
                    <StackPanel IsVisible="{Binding ShowApiKey}">
                        <TextBlock Classes="label" Text="API Key"/>
                        <TextBox Text="{Binding ApiKey}"
                                 PasswordChar="*"
                                 Watermark="kr_xxxxxxxx"/>
                    </StackPanel>

                    <!-- Login/Register buttons -->
                    <Grid ColumnDefinitions="*,*" Margin="0,16,0,0">
                        <Button Grid.Column="0"
                                Command="{Binding LoginCommand}"
                                Classes="primary"
                                Margin="0,0,4,0"
                                IsEnabled="{Binding !IsAuthenticating}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <i:Icon Value="mdi-login" FontSize="16" Margin="0,0,8,0"
                                        IsVisible="{Binding !IsAuthenticating}"/>
                                <i:Icon Value="mdi-loading" FontSize="16" Margin="0,0,8,0"
                                        IsVisible="{Binding IsAuthenticating}"/>
                                <TextBlock Text="Login"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="1"
                                Command="{Binding RegisterCommand}"
                                Classes="secondary"
                                Margin="4,0,0,0"
                                IsEnabled="{Binding !IsAuthenticating}"
                                IsVisible="{Binding ShowUsernamePassword}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <i:Icon Value="mdi-account-plus" FontSize="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Register"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <!-- Error message for step 2 -->
                    <Border Background="#3A1B1B"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,16,0,0"
                            IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <StackPanel Orientation="Horizontal">
                            <i:Icon Value="mdi-alert-circle" FontSize="16" Foreground="#F44336"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="#F44336"
                                       Margin="8,0,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Success message -->
                    <Border Background="#1B3A1B"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,16,0,0"
                            IsVisible="{Binding SuccessMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                        <StackPanel Orientation="Horizontal">
                            <i:Icon Value="mdi-check-circle" FontSize="16" Foreground="#4CAF50"/>
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="#4CAF50"
                                       Margin="8,0,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <Border Height="24"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="24,12" Background="#252525">
            <Button Command="{Binding CancelCommand}"
                    Content="Cancel"
                    Classes="secondary"
                    HorizontalAlignment="Right"/>
        </Border>
    </Grid>
</Window>
