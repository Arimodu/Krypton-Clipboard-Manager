<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Krypton_Desktop.ViewModels"
        xmlns:i="https://github.com/projektanker/icons.avalonia"
        mc:Ignorable="d" d:DesignWidth="420" d:DesignHeight="450"
        x:Class="Krypton_Desktop.Views.MacOSPermissionsWindow"
        x:DataType="vm:MacOSPermissionsViewModel"
        Title="Krypton â€” macOS Permissions"
        Width="420" Height="450"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Background="#1E1E1E">

    <Window.Styles>
        <Style Selector="TextBlock.header">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="TextBlock.sub">
            <Setter Property="Foreground" Value="#999999"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        <Style Selector="Button.action">
            <Setter Property="Background" Value="#3D3D3D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Border Grid.Row="0" Padding="20,16" Background="#252525">
            <StackPanel Orientation="Horizontal">
                <i:Icon Value="mdi-shield-key" FontSize="24" Foreground="#0078D4"
                        VerticalAlignment="Center"/>
                <StackPanel Margin="12,0,0,0">
                    <TextBlock Text="macOS Permissions"
                               Foreground="#FFFFFF" FontSize="18" FontWeight="Bold"/>
                    <TextBlock Text="Grant the permissions below, then restart Krypton."
                               Foreground="#999999" FontSize="12" Margin="0,2,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Permission cards -->
        <ScrollViewer Grid.Row="1" Padding="16,12">
            <StackPanel Spacing="10">

                <!-- Input Monitoring -->
                <Border Background="#2D2D2D" CornerRadius="8" Padding="16">
                    <Grid RowDefinitions="Auto,Auto,Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Classes="header"
                                       Text="Input Monitoring"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <i:Icon Value="mdi-check-circle"
                                        FontSize="18" Foreground="#4CAF50"
                                        IsVisible="{Binding InputMonitoringGranted}"/>
                                <i:Icon Value="mdi-close-circle"
                                        FontSize="18" Foreground="#F44336"
                                        IsVisible="{Binding !InputMonitoringGranted}"/>
                                <TextBlock Text="Granted" Foreground="#4CAF50"
                                           FontSize="12" FontWeight="SemiBold"
                                           Margin="6,0,0,0"
                                           IsVisible="{Binding InputMonitoringGranted}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Required" Foreground="#F44336"
                                           FontSize="12" FontWeight="SemiBold"
                                           Margin="6,0,0,0"
                                           IsVisible="{Binding !InputMonitoringGranted}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Grid.Row="1" Classes="sub" Margin="0,6,0,10"
                                   Text="Allows Krypton to detect the global hotkey to open the clipboard history popup. This is the primary permission required."/>
                        <Button Grid.Row="2" Classes="action"
                                Command="{Binding RequestInputMonitoringCommand}"
                                Content="Open Input Monitoring Settings"
                                IsVisible="{Binding !InputMonitoringGranted}"/>
                    </Grid>
                </Border>

                <!-- Accessibility -->
                <Border Background="#2D2D2D" CornerRadius="8" Padding="16">
                    <Grid RowDefinitions="Auto,Auto,Auto">
                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Classes="header"
                                       Text="Accessibility"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <i:Icon Value="mdi-check-circle"
                                        FontSize="18" Foreground="#4CAF50"
                                        IsVisible="{Binding AccessibilityGranted}"/>
                                <i:Icon Value="mdi-close-circle"
                                        FontSize="18" Foreground="#F44336"
                                        IsVisible="{Binding !AccessibilityGranted}"/>
                                <TextBlock Text="Granted" Foreground="#4CAF50"
                                           FontSize="12" FontWeight="SemiBold"
                                           Margin="6,0,0,0"
                                           IsVisible="{Binding AccessibilityGranted}"
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Recommended" Foreground="#FF9800"
                                           FontSize="12" FontWeight="SemiBold"
                                           Margin="6,0,0,0"
                                           IsVisible="{Binding !AccessibilityGranted}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                        <TextBlock Grid.Row="1" Classes="sub" Margin="0,6,0,10"
                                   Text="Allows Krypton to interact with other apps for pasting clipboard content. Recommended for full functionality."/>
                        <Button Grid.Row="2" Classes="action"
                                Command="{Binding RequestAccessibilityCommand}"
                                Content="Open Accessibility Settings"
                                IsVisible="{Binding !AccessibilityGranted}"/>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="16,12" Background="#252525">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                <Button Grid.Column="0" Classes="action"
                        Command="{Binding RefreshCommand}"
                        Content="Refresh"/>
                <Button Grid.Column="2" Classes="primary"
                        Command="{Binding RestartCommand}"
                        Content="Restart Krypton"
                        Margin="0,0,8,0"/>
                <Button Grid.Column="3" Classes="action"
                        Command="{Binding CloseCommand}"
                        Content="Close"/>
            </Grid>
        </Border>
    </Grid>
</Window>
